#include <iostream>
#include <conio.h>
#include <stdio.h>

using namespace std;

void tr4();
void SumSomeNum();
void MaxOf3();
void OutputCol();


void main(){
	setlocale(LC_ALL, "Russian");
	int x, y;
	cout << "Введите номер задачи, которую вы хотите выполнить:\n";
	cout << "1. Нарисовать 4 треугольника." << endl;
	cout << "2. Найти сумму чисел от 20 до 35." << endl;
	cout << "3. Из 3х чисел найти максимальное с помощью двух переменных." << endl;
	cout << "4. Вывод по столбцам чисел от 1 до 10 в перовм столбце, от 100 до 90 через 10 в другом столбце." << endl;
	cin >> x;
	switch (x)
	{
	case 1: 
		{
		tr4();
		break;
		}
	case 2:
		{
		SumSomeNum();
		break;
		}
	case 3:
		{
		MaxOf3();
		break;
		}
	case 4:
		{
		OutputCol();
		break;
		}
	default:
		{
		cout <<"Неправильный ввод." << endl;
		_getch();
		}

	}


}

void tr4(){
	int y = 0, j, i;
	cout << "Введите количество звездочек в треуголнике: ";
	cin >> y;
	for (j = y; j >= 0; j--){
		for (i = 1; i <= j; i++){
			cout << "*" ;
			}
		cout << endl;
		}	

	cout << endl;

	for (j = 1; j <= y; j++){
		for (i = 1; i <= j; i++){
			cout << "*" ;
			}
		cout << endl;
		}

	cout << endl;

	for (j = 1; j <= y; j++){
		for (i = 1 ; i <= y; i++){
			if ( i <= y - j)
				cout << " ";
			else 
				cout << "*" ;
			}
		cout << endl;
		}	

	cout << endl;

	for (j = 1; j <= y; j++){
		for (i = 1 ; i <= y; i++){
			if ( i >= j)
				cout << "*";
			else 
				cout << " " ;
			}
		cout << endl;
		}		
	_getch();
	}

	

	void SumSomeNum(){
	int x = 0, y = 0, sum = 0;
	cout << "Введите число, с которого начинается суммирование:";
	cin >> x ;
	cout << "Введите число, на котором заканнчивается суммирование:";
	cin >> y ;
	cout << "Сумма чисел от " << x;
	while (x <= y){
		sum += x;
		x++;
		}
	cout << " до " << y << " = " << sum;
	_getch();
	}

	void MaxOf3(){
	int x, y, z, tmp = -2147483648;
	cout << "Введите число первое число:";
	cin >> x ;
	cout << "Введите число первое число:";
	cin >> y ;
	cout << "Введите число первое число:";
	cin >> z ;
	if (tmp <= x)
		tmp = x;
	if (tmp <= y)
		tmp = y;
	if (tmp <= z)
		tmp = z;
	cout << "Максимальное из чисел " << x << ", " << y << ", " << z <<" число - " << tmp;
	_getch();
	}

	void OutputCol(){
	int x = 1, y = 100;
	while (x <= 10 && y >= 10){
		cout << x << "\t" << y << endl;
		x++;
		y -= 10;
	}
	_getch();
	}
